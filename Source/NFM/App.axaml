<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NFM.App">
    <Application.Styles>
		
		<!--Default Theme-->
		<FluentTheme Mode="Dark"/>
		<SimpleTheme Mode="Dark"/>
		
		<!--Modified Default Theme-->
		<StyleInclude Source="avares://NFM/Assets/EditorTheme.axaml"/>
		
		<!--Third-party Controls-->
		<StyleInclude Source="avares://Avalonia.Controls.TreeDataGrid/Themes/Fluent.axaml"/>
		
		<!--Custom Controls (Misc)-->
		<StyleInclude Source="avares://NFM/Controls/WindowButtons.axaml"/>
		<StyleInclude Source="avares://NFM/Controls/Docking/Tab.axaml"/>
		<StyleInclude Source="avares://NFM/Controls/Docking/TabGroup.axaml"/>

		<!--Custom Controls (Inputs)-->
		<StyleInclude Source="avares://NFM/Controls/Inputs/BoolInput.axaml"/>
		<StyleInclude Source="avares://NFM/Controls/Inputs/TextInput.axaml"/>
		<StyleInclude Source="avares://NFM/Controls/Inputs/NumInput.axaml"/>
		<StyleInclude Source="avares://NFM/Controls/Inputs/ResourceInput.axaml"/>
    </Application.Styles>

	<Application.Resources>
		<WindowIcon x:Key="AppIcon">avares://NFM/Assets/appicon.ico</WindowIcon>
	</Application.Resources>
</Application>
