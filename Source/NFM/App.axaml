<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NFM.App"
			 RequestedThemeVariant="Dark">
	
    <Application.Styles>		
		<!--Default Theme-->
		<StyleInclude Source="avares://NFM/Assets/Theme.axaml"/>
		
		<!--Custom Controls (Misc)-->
		<StyleInclude Source="avares://NFM/Controls/Docking/DockTab.axaml"/>
		<StyleInclude Source="avares://NFM/Controls/Docking/DockGroup.axaml"/>

		<!--Custom Controls (Inputs)-->
		<StyleInclude Source="avares://NFM/Controls/Inputs/BoolInput.axaml"/>
		<StyleInclude Source="avares://NFM/Controls/Inputs/TextInput.axaml"/>
		<StyleInclude Source="avares://NFM/Controls/Inputs/NumInput.axaml"/>
		<StyleInclude Source="avares://NFM/Controls/Inputs/ResourceInput.axaml"/>
    </Application.Styles>

	<Application.Resources>
		<WindowIcon x:Key="AppIcon">avares://NFM/Assets/appicon.ico</WindowIcon>
	</Application.Resources>
</Application>
