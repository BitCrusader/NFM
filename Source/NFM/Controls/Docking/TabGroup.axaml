<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:NFM">

	<Style Selector="controls|TabGroup">
		<Setter Property="Template">
			<ControlTemplate>
				<DockPanel>
					<!--Tab well-->
					<Grid DockPanel.Dock="Top">
						<ItemsControl Items="{TemplateBinding Tabs}">
							<ItemsControl.ItemsPanel>
								<ItemsPanelTemplate>
									<StackPanel Orientation="Horizontal"/>
								</ItemsPanelTemplate>
							</ItemsControl.ItemsPanel>
						</ItemsControl>
					</Grid>

					<!--Content area-->
					<ContentPresenter VerticalAlignment="Stretch" BorderThickness="2" CornerRadius="0" Content="{Binding SelectedTab.Panel, RelativeSource={RelativeSource TemplatedParent}}" Background="{DynamicResource ThemeControlHighColor}" BorderBrush="{DynamicResource ThemeControlHighColor}" Focusable="True"/>
				</DockPanel>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
