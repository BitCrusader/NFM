<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style Selector="TextBox">
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Padding" Value="4, 0, 0, 0"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled"/>
		<Setter Property="SelectionBrush" Value="{StaticResource ThemeControlHighlightMidBrush}"/>
		<Setter Property="SelectionForegroundBrush" Value="#82B9FF"/>
		<Setter Property="Foreground" Value="{StaticResource ThemeForegroundMidBrush}"/>
	</Style>

	<Style Selector="TextBox.search">
		<Setter Property="CornerRadius" Value="2"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{x:Null}"/>
	</Style>

	<Style Selector="TextBox.search:pointerover /template/ Border#border">
		<Setter Property="BorderBrush" Value="{x:Null}"/>
	</Style>

	<Style Selector="TextBox.search:focus /template/ Border#border">
		<Setter Property="BorderBrush" Value="#3472E6"/>
	</Style>
	
</Styles>