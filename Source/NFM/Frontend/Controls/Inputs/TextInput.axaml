<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:NFM.Frontend">

  <Style Selector="controls|TextInput">
    <Setter Property="Template">
      <ControlTemplate>
		<Border CornerRadius="2" Background="{StaticResource ControlBackgroundColor}" Padding="1">
			<Grid ColumnDefinitions="auto, *">
				<Border Background="#19E6E62E" Width="20" MinHeight="20" VerticalAlignment="Stretch">
					<TextBlock Text="&#xE3C9;" FontSize="14" FontFamily="{StaticResource IconsFont}" Foreground="#E6E62E" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
				</Border>
				<TextBox x:Name="PART_TextBox" Grid.Column="1" Padding="4, 0" VerticalContentAlignment="Center" Text="{TemplateBinding ValueProxy, Mode=TwoWay}" Foreground="{StaticResource ThemeForegroundMidBrush}" TextWrapping="Wrap"/>
			</Grid>
		</Border>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
