		<EmbeddedResource Include="Shaders\Standard\Prepass\BaseMS.h" />
		<EmbeddedResource Include="Shaders\Standard\Prepass\BaseMS.hlsl" />
		<EmbeddedResource Include="Shaders\Common\Gizmos\GeomMS.hlsl" />
