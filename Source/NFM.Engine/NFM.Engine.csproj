	<ItemGroup>
	  <None Remove="FodyWeavers.xml" />
	  <None Remove="Shaders\Standard\LightingCS.hlsl" />
	</ItemGroup>
	
	<ItemGroup>
		<EmbeddedResource Include="Shaders\Common\SFTemplate.hlsl" />
